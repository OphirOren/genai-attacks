{
  "$id": "entity.schema.json",
  "additionalProperties": false,
  "properties": {
    "$id": {
      "$ref": "../schemas/common.schema.json#/definitions/$id",
      "pattern": "entity"
    },
    "$schema": {
      "type": "string"
    },
    "$type": {
      "$ref": "../schemas/common.schema.json#/definitions/$type",
      "default": "entity",
      "enum": [
        "entity"
      ]
    },
    "description": {
      "$comment": "A short bio for the entity.",
      "type": "string"
    },
    "entity_type": {
      "$comment": "The type of entity.",
      "enum": [
        "person",
        "organization"
      ],
      "type": "string"
    },
    "external_references": {
      "items": {
        "$ref": "../schemas/common.schema.json#/definitions/uri_reference"
      },
      "type": "array",
      "uniqueItems": true
    },
    "framework_references": {
      "items": {
        "$ref": "../schemas/common.schema.json#/definitions/framework_reference"
      },
      "type": "array",
      "uniqueItems": true
    },
    "name": {
      "$comment": "The name of the object.",
      "type": "string"
    },
    "object_references": {
      "items": {
        "$ref": "../schemas/common.schema.json#/definitions/object_reference"
      },
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "$id",
    "$type",
    "name",
    "description",
    "entity_type",
    "external_references",
    "$schema"
  ],
  "title": "Entity Schema",
  "type": "object"
}
