{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "description": {
      "type": "string"
    },
    "frameworks": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "id": {
      "$ref": "common.schema.json#/definitions/id"
    },
    "references": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "href": {
            "format": "uri",
            "type": "string"
          },
          "ref_author": {
            "allOf": [
              {
                "$ref": "common.schema.json#/definitions/id"
              },
              {
                "pattern": "authors/"
              }
            ]
          },
          "ref_title": {
            "type": "string"
          }
        },
        "required": [
          "href",
          "ref_title"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "summary": {
      "type": "string"
    },
    "tactics": {
      "items": {
        "allOf": [
          {
            "$ref": "common.schema.json#/definitions/id"
          },
          {
            "pattern": "tactics/"
          }
        ]
      },
      "type": "array"
    },
    "title": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "references",
    "summary",
    "tactics",
    "title"
  ],
  "type": "object"
}
